<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Symfony Demo application{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/jquery-jvectormap.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/AdminLTE.min.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/skin-blue.min.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/dataTables.bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('build/css/main.css?v=2') }}">
    {% endblock %}

    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini" id="{% block body_id %}{% endblock %}">
<div class="wrapper">
    {% block header %}
        <header class="main-header">

        <!-- Logo -->
        <a href="index2.html" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>PT</b></span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg">PriceTracker</span>
        </a>

        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="{{ app.user.avatarFull }}" class="user-image" alt="User Image">
                            <span class="hidden-xs">{{ app.user.nickname }}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">
                                <img src="{{ app.user.avatarFull }}" class="img-circle" alt="User Image">

                                <p>
                                    {{ app.user.nickname }} - Web Developer
                                    <small>Member since Nov. 2012</small>
                                </p>
                            </li>
                            <!-- Menu Body -->
                            <li class="user-body">
                                <div class="row">
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Followers</a>
                                    </div>
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Sales</a>
                                    </div>
                                    <div class="col-xs-4 text-center">
                                        <a href="#">Friends</a>
                                    </div>
                                </div>
                                <!-- /.row -->
                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="{{ path('user_index') }}" class="btn btn-default btn-flat">{{ 'l.profile'|trans }}</a>
                                </div>
                                <div class="pull-right">
                                    <a href="{{ path('security_logout') }}" class="btn btn-default btn-flat">{{ 'l.logout'|trans }}</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!-- Control Sidebar Toggle Button -->
                    <li>
                        <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                    </li>
                </ul>
            </div>

        </nav>
    </header>
    {% endblock %}

    {% block leftSidebar %}
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="{{ app.user.avatarFull }}" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>{{ app.user.nickname }}</p>
                    <a href="#"><i class="fa fa-circle text-success"></i> {{ 'l.online'|trans }}</a>
                </div>
            </div>
            <!-- search form -->
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search...">
                    <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                  <i class="fa fa-search"></i>
                </button>
              </span>
                </div>
            </form>
            <!-- /.search form -->
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu" data-widget="tree" data-active="{% if activeMenu is defined %} {{ activeMenu }} {% endif %}">
                {#<li class="header">MAIN NAVIGATION</li>#}
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-line-chart"></i> <span>{{ 'l.trackers'|trans }}</span>
                        <span class="pull-right-container">
                            <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li id="trackers-list"><a href="{{ path('tracker_list') }}"><i class="fa fa-circle-o"></i>{{ 'l.list'|trans }}</a></li>
                        <li id="trackers-add"><a href="{{ path('tracker_add') }}"><i class="fa fa-circle-o"></i>{{ 'l.add'|trans }}</a></li>
                    </ul>
                </li>
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-files-o"></i>
                        <span>Layout Options</span>
                        <span class="pull-right-container">
              <span class="label label-primary pull-right">4</span>
            </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="pages/layout/top-nav.html"><i class="fa fa-circle-o"></i> Top Navigation</a></li>
                        <li><a href="pages/layout/boxed.html"><i class="fa fa-circle-o"></i> Boxed</a></li>
                        <li><a href="pages/layout/fixed.html"><i class="fa fa-circle-o"></i> Fixed</a></li>
                        <li><a href="pages/layout/collapsed-sidebar.html"><i class="fa fa-circle-o"></i> Collapsed Sidebar</a></li>
                    </ul>
                </li>

            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>
    {% endblock %}

    <div class="content-wrapper">
        {% block contentHeader %}
        <section class="content-header" style="min-height:37px;">
            <h1>
            {% block contentTitle %}
                Dashboard <small>Version 2.0</small>
            {% endblock %}
            </h1>
            {% block breadcrumb %}
                <ol class="breadcrumb">
                    <li><a href="{{ path('tracker_list') }}"><i class="fa fa-dashboard"></i> {{ 'l.home'|trans }}</a></li>
                    {% block breadcrumbAfter %}
                        <li class="active">{{ 'l.home'|trans }}</li>
                    {% endblock %}
                </ol>
            {% endblock %}
        </section>


        {% endblock %}

        <section class="content">
            {% block content %}

            {% endblock %}
        </section>
    </div>

    {% block flash %}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message flash-{{ label }}">
                    {{ message|trans }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endblock %}

    {% block footer %}
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.4.0
            </div>
            <strong>Copyright &copy; 2018</strong> All rights reserved.
        </footer>
    {% endblock %}

</div>

{% block javascripts %}
    <script src="{{ asset('build/js/jquery.min.js') }}"></script>
    <script src="{{ asset('build/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('build/js/fastclick.js') }}"></script>
    <script src="{{ asset('build/js/adminlte.min.js') }}"></script>
    <script src="{{ asset('build/js/jquery.sparkline.min.js') }}"></script>
    <script src="{{ asset('build/js/jquery-jvectormap-1.2.2.min.js') }}"></script>
    <script src="{{ asset('build/js/jquery-jvectormap-world-mill-en.js') }}"></script>
    <script src="{{ asset('build/js/jquery.slimscroll.js') }}"></script>
    <script src="{{ asset('build/js/Chart.min.js') }}"></script>
    <script src="{{ asset('build/js/dashboard2.js') }}"></script>
    <script src="{{ asset('build/js/demo.js') }}"></script>
    <script src="{{ asset('build/js/main.js') }}"></script>
    <script src="{{ asset('build/js/jquery.flot.js') }}"></script>
{% endblock %}
</body>
</html>