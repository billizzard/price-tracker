<div class="form-group editImage">
        {% for image in images %}
            <div class="img-item" data-id="{{ image.id }}">
                <a href="#" class="fa fa-remove delete js-delete"></a>
                <img src="{{ image.src }}" >
            </div>
        {% endfor %}
</div>

<style>
    .editImage .img-item {
        position:relative;
        display:inline-block;
        text-align: center;
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
        border: 5px solid #fff;
        margin: 5px;
    }
    .editImage .img-item img {
        max-width: 200px;
        max-height: 150px;

    }
    .editImage .img-item .delete {
        position: absolute;
        right: 0;
        top:0;
        padding: 5px;
        color: #fff;
        background-color: #000;
        opacity: 0.3;
        transition: 0.3s;
    }
    .editImage .img-item .delete:hover {
        opacity: 0.7;
    }
</style>
