{% extends 'profile.html.twig' %}

{% block contentTitle %}
    {{ 'l.messages'|trans }}
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{{ 'l.inbox'|trans }}</h3>
                <!-- /.box-tools -->
            </div>
            {% if (messages.data) %}
                {{ grid_view2(messages) }}
            {% else %}
                <div style="text-align:center; padding: 10px;">
                {{ 'l.no_data'|trans }}
                </div>
            {% endif %}
        </div>
        <!-- /. box -->
    </div>
</div>

{% endblock %}


