{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/js/login.js') }}"></script>
{% endblock %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

<div class="row">
    <div class="col-sm-12">
        <div class="well">
            <form action="{{ path('security_login') }}" method="post">
                <fieldset>
                    <legend><i class="fa fa-lock" aria-hidden="true"></i> {{ 'l.authorization'|trans }}</legend>
                    <div class="form-group">
                        <label for="username">{{ 'l.email'|trans }}</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'l.password'|trans }}</label>
                        <input type="password" id="password" name="_password" class="form-control" />
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'l.login'|trans }}
                    </button>
                    <a href="{{ path('security_registration') }}" title="{{ 'l.registration'|trans }}">{{ 'l.registration'|trans }}</a>
                </fieldset>
            </form>
        </div>
    </div>
</div>
{% endblock %}
