{% extends 'profile.html.twig' %}

{% block contentTitle %}
{% endblock %}

{% block breadcrumbAfter %}
    <li class="active">{{ 'l.view'|trans }}</li>
{% endblock %}

{% block content %}
    {#<div class="box box-widget widget-user-2">#}
        {#<!-- Add the bg color to the header using any of the bg-* classes -->#}
        {#<div class="widget-user-header bg-yellow">#}
            {#<div class="widget-user-image">#}
                {#<img class="img-circle" src="" alt="User Avatar">#}
            {#</div>#}
            {#<!-- /.widget-user-image -->#}
            {#<h3 class="widget-user-username">ewq</h3>#}
            {#<h5 class="widget-user-desc">qwe</h5>#}
        {#</div>#}
    {#</div>#}

    <div class="row">
        <!-- /.col -->
        <div class="col-md-12">
            <!-- Box Comment -->
            <div class="box box-widget">
                <div class="box-header with-border">
                    <div class="user-block">
                        <span class="username"><a href="{{ product.url }}">{{ watcher.title }}</a></span>
                        <span class="description">{{ product.url }}</span>
                    </div>
                    <!-- /.user-block -->
                    <div class="box-tools">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                        </button>
                    </div>
                    <!-- /.box-tools -->
                </div>
                <div class="box-footer no-padding">
                    <ul class="nav nav-stacked">
                        <li><a href="#">{{ 'l.startPrice'|trans }}<span class="pull-right text-blue">{{ watcher.startPrice }}</span></a></li>
                        <li><a href="#">{{ 'l.expectedDiscount'|trans }}<span class="pull-right text-green"><i class="fa fa-angle-down"></i> {{ watcher.percent }} %</span></a></li>
                        <li><a href="#">{{ 'l.status'|trans }}
                                {% if watcher.successDate %}
                                <span class="pull-right success-date badge bg-green">{{ watcher.successDate|date("m/d/Y") }}</span>
                                {% endif %}
                                <span class="pull-right text-{{ addData.status.class }}">{{ addData.status.label }}</span>
                            </a>
                        </li>
                        <li><a href="#">{{ 'l.createdAt'|trans }}<span class="pull-right badge bg-blue">{{ watcher.createdAt|date("m/d/Y")  }}</span></a></li>
                    </ul>
                </div>
            </div>

            <div class="box box-primary">
                <div class="box-header with-border">
                    <i class="fa fa-bar-chart-o"></i>

                    <h3 class="box-title">{{ 'l.schedule'|trans }}</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <div id="line-chart" style="height: 300px;" data-notfound="{{ 'l.no_data'|trans }}"></div>
                    <input type="hidden" name="jsonPrice" value="{{ jsonPrice }}" id="jsonPrice">
                </div>
                <!-- /.box-body-->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
{% endblock %}

