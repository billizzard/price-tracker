{% extends 'profile.html.twig' %}

{% block contentTitle %}
    {{ 'l.edit'|trans }}
{% endblock %}

{% block breadcrumbAfter %}
    <li class="active">{{ 'l.edit'|trans }}</li>
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        {{ form_row(form.title, {'label': 'l.title'|trans}) }}
        {{ form_row(form.url,  {'attr': {'disabled': 'disabled'}}) }}
        {{ form_row(form.startPrice, {'label': 'l.startPrice'|trans}) }}
        {{ form_row(form.percent, {'label': 'l.percent'|trans}) }}
        <button type="submit" class="btn btn-primary">{{ 'l.edit'|trans }}</button>
    {{ form_end(form) }}

{% endblock %}

